<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="colorPrimary">@color/white</item>-->
        <!--        <item name="colorPrimaryDark">@color/black</item>-->
        <!--        <item name="android:textColor">#000000</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- Hide the application title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Hide the application action bar -->
        <item name="windowActionBar">false</item>

        <!-- Make the application fullscreen -->
        <!--        <item name="android:windowFullscreen">true</item>-->

        <!-- Disable content overlays -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/background</item>

        <!-- Use a translucent status bar -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->

        <!-- Use a translucent navigation bar -->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Customized theme for item dialog. -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <!-- No window background. -->
        <item name="android:windowBackground">@null</item>

        <!-- No window title bar. -->
        <item name="android:windowNoTitle">true</item>

        <!-- Not a floating window. -->
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>
